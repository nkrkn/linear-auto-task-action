{
  "name": "@nkrkn/linear-auto-task-action",
  "description": "GitHub Actions TypeScript template",
  "version": "1.0.0",
  "author": "Nicholas Ramkissoon",
  "private": true,
  "homepage": "https://github.com/nkrkn/linear-auto-task-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nkrkn/linear-auto-task-action"
  },
  "bugs": {
    "url": "https://github.com/nkrkn/linear-auto-task-action/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "vitest run",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "vitest run",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@linear/sdk": "^26.0.0",
    "@nkrkn/linear-auto-task": "latest",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@types/node": "^22.4.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "make-coverage-badge": "^1.2.0",
    "memfs": "^4.11.1",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "vitest": "^2.0.5"
  }
}
